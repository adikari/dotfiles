#!/bin/bash

set -euo pipefail

current_dir=$(pwd)
ARCH=$(uname -m)

remove_package() {
  if yay -Qs $1 &>> /dev/null; then
    yay -R --noconfirm $1
  fi
}

install_package() {
  if yay -Q $1 &>> /dev/null; then
   echo "$1 is already installed"
  else
    yay -S $1 --noconfirm 
  fi
}


