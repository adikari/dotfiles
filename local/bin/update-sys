#!/usr/bin/env bash

if [ ! -f /etc/arch-release ]; then
  exit 0
fi

AUR=$(yay -Qua | wc -l)
OFFICIAL=$(checkupdates | wc -l)

case $1 in
  aur) echo " $AUR";;
  official) echo " $OFFICIAL";;
esac

if [ "$1" = "update" ]; then
  $TERMINAL --title update-sys sh -c 'yay -Syu'
fi

if [ "$1" = "" ]; then
  COUNT=$((OFFICIAL+AUR))

  if [[ "$COUNT" = "0" ]]; then
      echo ""
  else
    echo " $COUNT"
  fi
  exit 0
fi
