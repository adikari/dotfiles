[user]
  name = subash
  email = me@subash.com.au
	signingkey = ~/.ssh/github_id_rsa.pub

[url "git@github.com:"]
  insteadOf = https://github.com/

[core]
  ignorecase = false
  filemode = false
  editor = nvim
  pager = delta

[color]
  ui = true

[log]
  date = relative

[format]
  pretty = format:%C(yellow)%h %Cblue %ad %Cgreen %aN%Cred%d %Creset%s

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false
  line-numbers = true
  ; side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[difftool]
  prompt = false

[credential]
  helper = cache --timeout 7200

[init]
  defaultBranch = main

[pull]
  rebase = true

[gpg]
  format = ssh

[commit]
  gpgsign = true


