{
  "prettier.requireConfig": true,
  "javascript.suggestionActions.enabled": false,
  "yaml.customTags": [
    "!fn",
    "!And",
    "!If",
    "!Not",
    "!Equals",
    "!Or",
    "!FindInMap sequence",
    "!Base64",
    "!Cidr",
    "!Ref",
    "!Ref Scalar",
    "!Sub",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Select",
    "!Split",
    "!Join sequence"
  ],
  "css.customData": ["~/dotfiles/configs/css_custom_data.json"],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "json"
  ],
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "kotlin": {
      "command": "/usr/local/opt/kotlin-language-server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  }
}
