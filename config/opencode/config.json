{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"keybinds": {
		"messages_half_page_up": "ctrl+u",
		"messages_half_page_down": "ctrl+d"
	},
	"mcp": {
		"playwright": {
			"type": "local",
			"command": ["bunx", "-y", "@playwright/mcp"]
		},
		"context7": {
			"type": "local",
			"command": ["bunx", "-y", "@upstash/context7-mcp"]
		},
		"ddg-search": {
			"type": "local",
			"command": ["uvx", "duckduckgo-mcp-server"]
		}
	}
}
